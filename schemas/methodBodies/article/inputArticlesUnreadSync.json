{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "limit": {
      "type": "integer"
    },
    "articles": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "article_id": {
            "type": "integer"
          },
          "is_stared": {
            "type": "boolean"
          },
          "is_unread": {
            "type": "boolean"
          }
        },
        "required": [
          "article_id",
          "is_stared",
          "is_unread"
        ]
      }
    }
  },
  "required": [
    "articles",
    "limit"
  ]
}
